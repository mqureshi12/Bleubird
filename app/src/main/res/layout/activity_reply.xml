<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyActivity">

    <TextView
        android:id="@+id/tvCharacterCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etReply"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textSize="10sp"
        tools:text="167/280" />

    <EditText
        android:id="@+id/etReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOriginalAuthor"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Tweet your reply"
        android:inputType="textMultiLine"
        android:minLines="5" />

    <TextView
        android:id="@+id/tvOriginalAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/medium_gray"
        tools:text="Replying to @mqure12" />

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCharacterCounter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="@string/tweet" />

</RelativeLayout>